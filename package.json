{
  "name": "vue-bind-once",
  "version": "0.2.1",
  "description": "A tiny, SSR-safe directive for binding random data to an element.",
  "keywords": [
    "vue",
    "directive",
    "ssr"
  ],
  "repository": "danielroe/vue-bind-once",
  "license": "MIT",
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "dist/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "npm run lint:all:eslint && npm run lint:all:prettier",
    "lint:all:eslint": "npm run lint:eslint -- --ext .js,.ts .",
    "lint:all:prettier": "npm run lint:prettier -- \"{src,test}/**/*.{js,json,ts}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --log-level warn",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "release": "bumpp && npm publish",
    "test": "vitest run"
  },
  "dependencies": {
    "scule": "^1.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "@vitest/coverage-v8": "1.4.0",
    "@vue/test-utils": "2.4.6",
    "bumpp": "9.4.1",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "esbuild": "0.20.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "expect-type": "0.19.0",
    "happy-dom": "14.2.1",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "unbuild": "2.0.0",
    "vite": "5.2.11",
    "vitest": "1.4.0",
    "vue": "3.4.27"
  },
  "peerDependencies": {
    "vue": "^3"
  },
  "build": {
    "externals": [
      "vue"
    ]
  },
  "packageManager": "pnpm@8.15.8"
}
